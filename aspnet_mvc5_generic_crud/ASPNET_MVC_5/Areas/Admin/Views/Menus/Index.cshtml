@model IEnumerable<ASPNET_MVC_5.Areas.Admin.Models.Menu>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>@Html.ActionLink("Create New", "Create",new { }, new { @class="btn btn-default" })</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Url)</th>
        <th>@Html.DisplayNameFor(model => model.ParentMenuId)</th>
        <th>@Html.DisplayNameFor(model => model.Priority)</th>
        <th>Action</th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Url)</td>
        <td>@Html.DisplayFor(modelItem => item.ParentMenuId)</td>
        <td>@Html.DisplayFor(modelItem => item.Priority)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
